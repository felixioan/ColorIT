<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="750" prefWidth="1000" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.TabViewController" userData="Color IT Manager">
    <TabPane fx:id="tabPane" prefHeight="710" prefWidth="600" tabClosingPolicy="UNAVAILABLE">
        <Tab onSelectionChanged="#tabSelected" text="Project Manager">
            <fx:include fx:id="projectTabView" source="ProjectTabView.fxml" />
        </Tab>
        <Tab closable="false" onSelectionChanged="#tabSelected" text="Team Manager">
            <fx:include fx:id="teamMemberView" source="TeamMemberView.fxml" />
        </Tab>
    </TabPane>
</VBox>
